{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",

  "name": "Fizyr Documentation",
  "colors": {
    "primary": "#0BA9BC",
    "light": "#0BA9BC",
    "dark": "#0BA9BC"
  },
  "appearance": {
    "default": "dark"
  },

  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": ["introduction", "library"]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.fizyr.com",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://www.linkedin.com/company/fizyr/",
          "icon": "linkedin"
        },
        {
          "anchor": "Blog",
          "href": "https://fizyr.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@fizyr.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Contact Us",
      "href": "https://fizyr.com/contact/"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://www.linkedin.com/company/fizyr/",
      "youtube": "https://www.youtube.com/@fizyr"
    }
  }
}
